PORT=5000
MONGODB_URI=mongodb://localhost:27017/wallet-monitor
FETCH_INTERVAL_MINUTES=30
# Refresh ETH/BNB every N ms
REFRESH_INTERVAL_MS=10000
# Tron only: every 2s (like refer/tron.js)
TRON_REFRESH_INTERVAL_MS=2000
# BTC only: every 10s (like refer/btc.js)
BTC_REFRESH_INTERVAL_MS=10000
# LTC only: every 10s (like refer/ltc.js)
LTC_REFRESH_INTERVAL_MS=10000
CHAIN_DELAY_MS=400
PRICE_CACHE_MS=600000
# Solana: fewer signatures per run, delay between getParsedTransaction calls
SOL_SIGNATURE_LIMIT=20
SOL_TX_DELAY_MS=250
ETHERSCAN_BASE=https://etherscan.io
ADMIN_PASSWORD=your_admin_password
